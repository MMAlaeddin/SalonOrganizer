@using SalonOrganizer.Models;
@model List<SalonOrganizer.Models.Client>;

<h1>Client List:</h1>

@if (@Model.Count == 0)
{
  <h3>Sorry, but you clearly cannot run a business.  There are no clients!</h3>
}

@foreach (Client client in Model)
{
  <ul> @Html.ActionLink($"{client.ClientName}", "Details", new {id = client.ClientId})</ul>
}

<p>@Html.ActionLink("Add A Client", "Create")</p>
<p>@Html.ActionLink("Take Me HOME", "Index", "Home")</p>