@{
  Layout = "_Layout";
}

@using SalonOrganizer.Models;
@model List<SalonOrganizer.Models.Stylist>;

<h1>Stylist List</h1>

@if(@Model.Count == 0)
{
  <h3>No stylists have been added yet! Sorry.</h3>
}

@foreach (Stylist stylist in Model)
{
  <button><ul>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</ul></button>
}

<p>@Html.ActionLink("Add new stylist", "Create", "Stylists")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>